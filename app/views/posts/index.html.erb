<p id="notice"><%= notice %></p>
<% if user_signed_in? %>
  <%= link_to 'Add New Post', new_post_path(@post), class:"btn btn-success btn-new-post" %>
<% end %>
<div class="container">
  <div class="row">
<% @posts.each do |post| %>
  <!--<div class="card" style="width: 50rem;">
    <div class="card-body">-->
    <div class="col">
      <h5 class="card-title"><%= post.title %></h5><br/>
      <p class="card-text"><%= post.description %></p><br/>
      <% if user_signed_in? %>
        <p>By <%= name %></p><br/>
      <% end %>
      <p><%= post.user_id %></p><br/>
      <%= link_to 'View', post, class:"btn btn-success btn-sm" %>
      <%= link_to 'Edit', post, class:"btn btn-success btn-sm" %>
      <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger btn-sm" %>
    </div>
    <!--</div>
  </div>-->
<% end %>
</div>
</div>
</div>
<br>

